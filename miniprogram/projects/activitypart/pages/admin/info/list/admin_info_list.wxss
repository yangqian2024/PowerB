@import '../../../../../../style/public/admin.wxss';
@import '../../../../../../style/project/admin_list_style.wxss';

.admin-comm-list .item .info .oprt {
	padding: 0rpx 0rpx;
	display: flex;
	justify-content: center;
}

.admin-comm-list .item .info .oprt .btn {
	margin-right: 20rpx !important;
	width: unset !important;
	padding: 0 24rpx;
}

.admin-comm-list .item .header .left {
	font-size: 24rpx;
	font-weight: normal;
}


.admin-comm-list .info-item .album {
	margin-top: 20rpx;
	width: 100%;
	display: flex;
	flex-wrap: wrap;
}

.admin-comm-list .info-item .album image {
	height: 90rpx;
	width: 90rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	border-radius: 10rpx;
}


.reply {
	width: 100%;
	padding: 30rpx;
	background-color: #f8f8f8;
	border-radius: 4rpx;
	margin-bottom: 20rpx;
	font-size: 24rpx;
	color: #999;
	display: flex;
	flex-direction: column;
	line-height: 1.5;
}

.info-item .content .pic {
	width: 150rpx;
	height: 150rpx;
	margin-right: 16rpx;
	margin-bottom: 10rpx;
	border-radius: 10rpx;
	position: relative;
	margin-bottom: 16rpx;
}

.info-item .content  .pic>image {
	width: 100%;
	height: 100%;
	border-radius: inherit;
}
